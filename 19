#include <iostream>
using namespace std;
int main()

{

  int Days;
  int Hours;
  int Minutes;
  int Seconds;

  cout << "enter your Days,hours,minutes and seconds' work" << endl;
  cin >> Days;
  cin >> Hours;
  cin >> Minutes;
  cin >> Seconds;

  int total_minutes = (Days * 24 * 60 * 60) + (Hours * 60 * 60) + (Minutes * 60) + Seconds;

  cout << "your seconds' work is " << total_minutes << endl;




    return 0;

}
